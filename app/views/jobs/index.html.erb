<p id="notice"><%= notice %></p>

<h1>Job Opportunities</h1>

<table class="table table-striped table-hover" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Contact</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.title, job %></td>
        <td><%= job.company %></td>
        <td><%= job.contact %></td>
        <td><%= job.location %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
