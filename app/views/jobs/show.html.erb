    <p style="white-space: pre-wrap;">
      <%= @job.description %>
    </p>
    <br>

    <div class="well well-sm">
    <p>
      <strong>Contact:</strong>
      <%= @job.contact %>
    </p>
  </div>


<% if @job.email_shown %>
  <div class="well well-sm">
  <p>
    <strong>Email: </strong>
