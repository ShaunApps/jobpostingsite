
<h1>Employer Sign Up</h1>

<%= form_for :user, url: '/users' do |f| %>

<div class="form-group">
  <%= f.text_field :first_name, placeholder: "First Name", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.text_field :last_name, placeholder: "Last Name", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.text_field :email, placeholder: "Email Address", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.text_field :password, placeholder: "Password", :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.text_field :password_confirmation, placeholder: "Password Confirmation", :class => "form-control" %>
</div>

  <%= f.submit "Submit", :class => "btn btn-primary" %>

<% end %>

<%= link_to 'Back', users_path %>
